---
import BaseLayout from "../layouts/BaseLayout.astro";
import { Image } from "astro:assets";
import mcrRoundal from "../assets/mcr_favicon.svg";
---

<BaseLayout title="404 - Not Found">
	<div class="flex flex-col sm:flex-row gap-8 sm:pt-20 sm:pb-20">
		<div class="flex flex-col gap-2">
			<Image src={mcrRoundal} alt="Morning Chorus Records" width={200} height={200} class="flex-shrink-0 animate-spin [animation-duration:60s] motion-reduce:animate-none" />
		</div>

		<div class="flex flex-col gap-4">
			<div class="flex flex-col gap-2">
				<h1 class="text-3xl font-bold uppercase">404 - Not Found</h1>
				<p class="text-lg text-gray-500 italic">The page you are looking for does not exist.</p>
				<a href="/" class="underline">&rarr; Head back home</a>
			</div>
		</div>
	</div>
</BaseLayout>


