---
import BaseLayout from "../layouts/BaseLayout.astro";
const releaseModules = import.meta.glob("../content/releases/*.json", { eager: true }) as Record<string, any>;
const releases = Object.values(releaseModules) as any[];
---

<BaseLayout title="Releases">
  <h1 class="text-3xl font-bold mb-6">Releases</h1>
  <ul class="grid grid-cols-2 gap-6">
    {releases.map((release) => (
      <li>
        <a href={`/releases/${release.slug}`}>
          <h2 class="text-lg font-semibold">{release.release_name}</h2>
          <p class="text-sm text-gray-500">{release.artist}</p>
        </a>
      </li>
    ))}
  </ul>
</BaseLayout>